{
  "name": "netmap",
  "version": "0.1.0",
  "description": "Network topology discovery tool",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "dev:mock": "NETMAP_MOCK=true bun --watch src/server.ts",
    "pw": "bun run scripts/cleanup-server.ts && ./node_modules/.bin/bddgen && ./node_modules/.bin/playwright test",
    "pw:headed": "bun run scripts/cleanup-server.ts && ./node_modules/.bin/bddgen && ./node_modules/.bin/playwright test --headed"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/bun": "latest",
    "playwright-bdd": "^8.4.1"
  },
  "peerDependencies": {
    "typescript": "^5.6.0"
  }
}
